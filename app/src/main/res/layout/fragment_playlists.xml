<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_fragment_playlists"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".library.ui.fragment.PlaylistsFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp24"
        android:backgroundTint="@color/settings_text_changeable"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/create_playlist"
        android:textAllCaps="false"
        android:textColor="@color/settings_text_changeable_anti"
        android:textSize="@dimen/sp16"
        app:cornerRadius="@dimen/dp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/media_placeholder_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp46"
        android:contentDescription="@string/empty_playlists"
        android:src="@drawable/nothings_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_playlist_button" />

    <TextView
        android:id="@+id/library_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:textSize="@dimen/sp19"
        android:text="@string/empty_playlists"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        android:textColor="@color/settings_text_changeable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/media_placeholder_iv" />

    
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_playlist_button"
        android:id="@+id/image_for_test">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>