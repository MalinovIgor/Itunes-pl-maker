<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinearLayoutAsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">@dimen/standard</item>

    </style>

<style name="TextViewMain">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textFontWeight">500</item>
    <item name="android:textColor">@color/main_text_black</item>
    <item name="android:textSize">@dimen/standard_primary_text</item>
</style>

    <style name="ImageMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingEnd">5dp</item>
    </style>


</resources>