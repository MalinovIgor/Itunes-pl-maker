<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutAsButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/standard</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="ImageMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="RLSettings">
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">@dimen/vertical_text_pad</item>
        <item name="android:paddingEnd">@dimen/end_text_pad</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">end|center_vertical</item>

    </style>

    <style name="TextViewSettings">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_text_changeable</item>
        <item name="android:textSize">@dimen/standard_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:textSize">@dimen/standard_primary_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="android:backgroundTint">@color/main_background</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingStart">@dimen/small_one</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored
        </item>

    </style>

    <style name="button_update" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/album_placeholder_background</item>
        <item name="android:textSize">@dimen/small_text14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/settings_text_changeable</item>
        <item name="android:paddingStart">@dimen/small_one</item>
        <item name="android:background">@drawable/rounded_button_update</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored
        </item>

    </style>

    <style name="LinearLayoutAsButton_Update">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/standard</item>
        <item name="android:background">@drawable/rounded_button_update</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="textSearched">
        <item name="android:textColor">@color/YP_light_grey</item>
        <item name="android:textSize">@dimen/small_text_for_search</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="textViewForPlayesLeft">

        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textSize">@dimen/small_text13</item>
        <item name="android:textColor">@color/YP_light_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="textViewForPlayesRight">

        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textSize">@dimen/small_text13</item>
        <item name="android:textColor">@color/player_straight</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="LibraryTabs">
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="button_new_pl" parent="button">
        <item name="backgroundColor">@color/settings_text_changeable_anti</item>
        <item name="android:textColor">@color/settings_text_changeable</item>
    </style>


    <style name="new_pl_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@drawable/text_edit_str</item>
    </style>

    <style name="new_pl_textfield" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@drawable/text_edit_str</item>
    </style>

    <style name="AppBottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/blue</item>
    </style>



</resources>